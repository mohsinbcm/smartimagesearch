# Application Settings
APP_NAME=SmartImageSearch
APP_VERSION=0.1.0
DEBUG=true
LOG_LEVEL=INFO

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# Database Settings
DATABASE_URL=sqlite:///./data/database.db
# For PostgreSQL: postgresql://user:password@localhost/smartimagesearch

# Vector Database Settings
VECTOR_DB_TYPE=faiss  # Options: faiss, chromadb
FAISS_INDEX_PATH=./data/embeddings.index
CHROMA_PERSIST_DIR=./data/chroma_db

# Model Settings
CLIP_MODEL=openai/clip-vit-large-patch14
# Alternatives:
# - openai/clip-vit-base-patch32 (faster, smaller)
# - laion/CLIP-ViT-H-14-laion2B-s32B-b79K (best quality)
# - apple/MobileCLIP-S2-OpenCLIP (lightweight)

MODEL_CACHE_DIR=./models
EMBEDDING_DIMENSION=768
BATCH_SIZE=32
USE_GPU=true
DEVICE=cuda  # Options: cuda, cpu, mps (for Mac M1/M2)

# Image Processing Settings
THUMBNAIL_SIZE=256
MAX_IMAGE_SIZE=2048
SUPPORTED_FORMATS=jpg,jpeg,png,gif,bmp,tiff,webp,heic

# Face Recognition Settings
ENABLE_FACE_RECOGNITION=true
FACE_DETECTOR=retinaface  # Options: retinaface, mtcnn, yunet, opencv
FACE_RECOGNITION_MODEL=arcface  # Options: arcface, facenet, vgg-face
FACE_EMBEDDING_DIMENSION=512
MIN_FACE_SIZE=20  # Minimum face size in pixels
FACE_DETECTION_CONFIDENCE=0.8
FACE_CLUSTERING_EPS=0.5
FACE_CLUSTERING_MIN_SAMPLES=3
AUTO_CLUSTER_FACES=true
FACE_THUMBNAIL_SIZE=128

# Indexing Settings
MAX_WORKERS=4
SCAN_RECURSIVE=true
SKIP_HIDDEN_FILES=true
HASH_ALGORITHM=sha256
INCREMENTAL_INDEXING=true

# Search Settings
DEFAULT_TOP_K=20
MAX_TOP_K=100
SIMILARITY_THRESHOLD=0.3
ENABLE_QUERY_CACHE=true
CACHE_TTL=3600

# File Watcher Settings
ENABLE_FILE_WATCHER=true
WATCH_INTERVAL=5

# Cache Settings (Redis - Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Security Settings
ENABLE_AUTH=false
SECRET_KEY=your-secret-key-here-change-in-production
API_KEY=

# Monitoring (Optional)
SENTRY_DSN=
ENABLE_METRICS=false

# Performance Settings
ONNX_OPTIMIZATION=false
QUANTIZATION=false
USE_FP16=false

# Paths (Override defaults)
# SCAN_PATHS=/path/to/photos,/path/to/images
# EXCLUDE_PATHS=/path/to/exclude
